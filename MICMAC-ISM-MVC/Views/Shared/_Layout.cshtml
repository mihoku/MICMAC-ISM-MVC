<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MICMAC-ISM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MICMAC_ISM_MVC.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MICMAC-ISM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Projects" asp-action="Details" asp-route-id="@ViewBag.ProjectID">Project Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Features" asp-action="Index" asp-route-id="@ViewBag.ProjectID">Feature List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Experts" asp-action="Index" asp-route-id="@ViewBag.ProjectID">Experts Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Features" asp-action="SSI" asp-route-id="@ViewBag.ProjectID">SSI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Features" asp-action="IRM" asp-route-id="@ViewBag.ProjectID">IRM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Features" asp-action="FRM" asp-route-id="@ViewBag.ProjectID">FRM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Features" asp-action="Partition" asp-route-id="@ViewBag.ProjectID">Partition</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Features" asp-action="HierarchicalModel" asp-route-id="@ViewBag.ProjectID">Hierarchical Model</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - MICMAC-ISM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
